<Window x:Class="KinectCoordinateMapping.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect Coordinate Mapping" Height="600" Width="800" WindowState="Maximized"
        Loaded="Window_Loaded" Unloaded="Window_Unloaded">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Image Name="camera" Width="640" Height="480" />
    <Canvas Name="canvas" Width="640" Height="480" />
    <TextBlock Grid.Row="1" Name="textBlock" 
               Text="I recognized : "
               HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
  </Grid>
</Window>
